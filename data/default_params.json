{
    "formatdate": "2-Jan-2006",
    "languagecode": "en-US",
    "params": {
        "opengraph"             : "internal",
        "twittercards"          : "internal",
        "schema"                : "internal",
        "lighbox_for_big_image" : true,
        "lighbox_max_size"      : 800,
        "ref_heading"           : 3,
        "ref_title"             : "references",
        "single": {
            "displayimage"      : true,
            "displayserie"      : true,
            "meta"              : { "top": {}, "middle": { "1": "fulldate", "2": "reading"}, "bottom": {} }
        },
        "postslist": {
            "format"            : "meta-left",
            "columns"           : { "xs": 1, "sm": 1, "md": 1, "lg": 1, "xl": 1 },
            "meta"              : { "top": { "1": "section", "2": "date", "3": "tags", "4": "series", "5": "reading" }, "middle": {}, "bottom": {} }
        },
        "serieslist": {
            "format"            : "image-top",
            "columns"           : { "xs": 1, "sm": 1, "md": 2, "lg": 2, "xl": 2 },
            "meta"              : { "top": { }, "middle": { "1": "linkedsection" }, "bottom": {} }
        },
        "authorslist": {
            "numposts"          : true,
            "lastposts"         : 10
        },
        "meta": {
            "format_image_left": { 
                "top"           : { "1": "section" },
                "middle"        : { "2": "tags" },
                "bottom"        : { "1": "date", "2": "reading" }
            },
            "format_image_right": { 
                "top"           : { "1": "section" },
                "middle"        : { "2": "tags" },
                "bottom"        : { "1": "date", "2": "reading" }
            },
            "format_image_top": { 
                "top"           : { "1": "section" },
                "middle"        : { "2": "tags" },
                "bottom"        : { "1": "date", "2": "reading" }
            },
            "format_meta_left": { 
                "top"           : { "1": "section", "2": "date", "3": "tags", "4": "series", "5": "reading" },
                "middle"        : {},
                "bottom"        : {}
            },
            "format_no_image": { 
                "top"           : { "1": "section" },
                "middle"        : { "2": "tags" },
                "bottom"        : { "1": "date", "2": "reading" }
            }
        },
        "series": {
            "heading": "p",
            "title"  : "part-of-a-serie"
        },
        "manifest": {
            "display"           : "browser",
            "backgroundColor"   : "#ffffff",
            "orientation"       : "portrait",
            "scope"             : "/"
        },
        "favicons": {
            "folder"            : "favicons",
            "safaritabColor"    : "#ffffff",
            "mstilecolor"       : "#00aba9",
            "themecolor"        : "#ffffff"
        }
    },
    "widgets": {
        "areas": {
            "limitedwidth"      : false,
            "columns"           : { "xs": 1, "sm": 1, "md": 1, "lg": 1, "xl": 1 }
        },
        "default": {
            "heading"           : 3,
            "columns"           : { "xs": 1, "sm": 1, "md": 3, "lg": 3, "xl": 3 },
            "format"            : "image-full",
            "cache"             : false
        },
        "follow_me": {
            "title"             : "follow-me",
            "direction"         : "horizontal"
        },
        "popular": {
            "title"             : "most-popular-posts",
            "numposts"          : 6,
            "filename"          : "popularposts.json"
        },
        "gallery": {
            "title"             : "portfolio",
            "columns"           : 2,
            "numposts"          : 6,
            "taxonomy"          : "tags",
            "exif"              : false
        },
        "related": {
            "title"             : "related-posts",
            "columns"           : { "xs": 1, "sm": 1, "md": 3, "lg": 3, "xl": 3 },
            "numposts"          : 3
        },
        "sections": {
            "title"             : "sections-list",
            "columns"           : { "xs": 1, "sm": 1, "md": 2, "lg": 4, "xl": 4 },
            "format"            : "image-title"
        },
        "serieslist": {
            "title"             : "series",
            "columns"           : { "xs": 1, "sm": 1, "md": 3, "lg": 3, "xl": 3 },
            "format"            : "image-title"
        },
        "seriesame": {
            "title"             : "in-same-serie",
            "numposts"          : 10
        },
        "share": {
            "title"             : "share-this-post"
        },
        "tagscloud": {
            "title"             : "tags",
            "largest"           : 2,
            "smallest"          : 0.875
        },
        "tagslist": {
            "title"             : "tags"
        },
        "tags": {
            "title"             : "tags"
        },
        "page": {
            "displaydate"       : false
        },
        "posts": {
            "title"             : "last-posts-published",
            "numposts"          : 6,
            "columns"           : { "xs": 1, "sm": 1, "md": 3, "lg": 3, "xl": 3 }
        },
        "authors": {
            "numposts"          : false,
            "lastposts"         : 0
        }
    },
    "shortcodes": {
        "gallery": {
            "files"             : "gallery",
            "size"              : 250,
            "caption"           : true,
            "overlay"           : "bottom"
        },
        "attachments": {
            "fields"            : "icon,title,size",
            "files"             : "*"
        }
    },
    "services": {
        "rss"                   : 10
    }
}