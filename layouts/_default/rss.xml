{{- $limit := 20 -}}
{{- if gt .Site.Config.Services.RSS.Limit 0 -}}{{- $limit = .Site.Config.Services.RSS.Limit -}}{{- end -}}
{{- $pages := .RegularPages | first $limit -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"  ?>" | safeHTML -}}
<rss xmlns:media="http://search.yahoo.com/mrss/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:creativeCommons="http://backend.userland.com/creativeCommonsRssModule" version="2.0">
  <channel>
    {{- $title := "" -}}
    {{- if .IsHome -}}
      {{- $title = .Title | default .Site.Title -}}
    {{- else if .IsSection -}}
      {{- $title = printf "%s posts on %s" .Title .Site.Title -}}
    {{- else -}}
      {{- $title = printf "%s on %s" .Title .Site.Title -}}
    {{- end -}}
    <title>{{- $title | plainify | htmlUnescape -}}</title>
    <link>{{- .Permalink -}}</link>
    {{- with .OutputFormats.Get "RSS" -}}
      {{- printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML -}}
    {{- end -}}
    {{- $description := .Params.description | default .Site.Params.description | default "" -}}
    {{- with $description -}}
      <description>{{- (printf "<![CDATA[%s]]>" ($description | plainify)) | htmlUnescape -}}</description>
    {{- end -}}
    {{- with .Site.Params.licenceURL -}}<creativeCommons:license>{{- . | safeHTML -}}</creativeCommons:license>{{- end -}}
    {{- with .Site.LanguageCode -}}<language>{{- . -}}</language>{{- end -}}
    {{- with .Site.Author.name -}}
      {{- $name := . -}}
      {{- with $.Site.Author.email -}}
        <managingEditor>{{- . -}} ({{- $name | plainify | htmlUnescape -}})</managingEditor>
      {{- else -}}
        <managingEditor>{{- $name | plainify | htmlUnescape -}}</managingEditor>
      {{- end -}}
    {{- end -}}
    {{- with .Site.Author.name -}}
      {{- $name := . -}}
      {{- with $.Site.Author.email -}}
        <webMaster>{{- . -}} ({{- $name | plainify | htmlUnescape -}})</webMaster>
      {{- else -}}
        <webMaster>{{- $name | plainify | htmlUnescape -}}</webMaster>
      {{- end -}}
    {{- end -}}
    {{- with .Site.Copyright -}}<copyright>{{- . | htmlUnescape -}}</copyright>{{- end -}}
    {{- if not .Date.IsZero -}}<lastBuildDate>{{- .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" -}}</lastBuildDate>{{- end -}}
    {{- range $pages -}}
      {{- $title        := .Title   | plainify | htmlUnescape -}}
      {{- $summary      := .Summary | plainify | htmlUnescape -}}
      {{- $authors_list := slice -}}
      {{- range .GetTerms "authors" -}}
        {{- $authors_list = $authors_list | append (slice .Params.Title) -}}
      {{- end -}}
      <item>
        <title>{{- .Title | safeHTML -}}</title>
        <link>{{- .Permalink -}}</link>
        <guid isPermaLink="true">{{- .Permalink -}}</guid>
        <pubDate>{{- .Lastmod.Format "Mon, 02 Jan 2006 15:04:05 -0700" -}}</pubDate>
        <description>{{- (printf "<![CDATA[%s]]>" ($summary | plainify)) | htmlUnescape -}}</description>
        {{- with $authors_list -}}<author>{{- delimit $authors_list "," -}}</author>{{- end -}}
        {{- with .CurrentSection -}}<category domain="{{- .Permalink -}}">{{- .Title -}}</category>{{- end -}}
        {{- if isset .Params "images" -}}
            {{- $image := .Resources.GetMatch (index .Params.Images 0) -}}
            {{- with $image -}}
              <media:content url="{{- .Permalink -}}" type="{{- .MediaType -}}" height="{{- .Height -}}" width="{{- .Width -}}" />
            {{- end -}}
        {{- end -}}
      </item>
    {{- end -}}
  </channel>
</rss>