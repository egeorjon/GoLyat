{{- $rfc822_date := "Mon, 02 Jan 2006 15:04:05 -0700" -}}
{{- $limit    := 20 -}}
{{- $protocol := "" -}}
{{- if gt site.Config.Services.RSS.Limit 0 -}}{{- $limit = site.Config.Services.RSS.Limit | default site.Data.default_params.services.rss -}}{{- end -}}
{{- $pages := .RegularPages | first $limit -}}
{{- if .IsHome -}}
  {{- $pages = first $limit (where site.RegularPages "Type" "in" site.Params.mainSections) -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"  ?>" | safeHTML -}}
<rss xmlns:media="http://search.yahoo.com/mrss/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:creativeCommons="http://backend.userland.com/creativeCommonsRssModule" version="2.0">
  <channel>
    {{- $title := "" -}}
    {{- if .IsHome -}}
      {{- $title = .Title | default site.Title -}}
    {{- else if .IsSection -}}
      {{- $title = printf "%s posts on %s" .Title site.Title -}}
    {{- else -}}
      {{- $title = printf "%s on %s" .Title site.Title -}}
    {{- end -}}
    <title>{{- $title | plainify | htmlUnescape -}}</title>
    <link>{{- $protocol -}}{{- .Permalink -}}</link>
    {{- with .OutputFormats.Get "RSS" -}}
      {{- printf "<atom:link href=\"%s%s\" rel=\"self\" type=\"%s\" />" $protocol .Permalink .MediaType | safeHTML -}}
    {{- end -}}
    {{- $description := .Params.description | default site.Params.description | default "" -}}
    {{- with $description -}}
      <description>{{- $description | plainify | htmlUnescape -}}{{/*- printf "<![CDATA[%s]]>" ($description | plainify | htmlUnescape) -*/}}</description>
    {{- end -}}
    {{- with site.Params.licenceURL -}}<creativeCommons:license>{{- . | safeHTML -}}</creativeCommons:license>{{- end -}}
    {{- with site.LanguageCode -}}<language>{{- . -}}</language>{{- end -}}
    {{- with site.Author.name -}}
      {{- $name := . -}}
      {{- with site.Author.email -}}
        <managingEditor>{{- . -}} ({{- $name | plainify | htmlUnescape -}})</managingEditor>
      {{- else -}}
        <managingEditor>{{- $name | plainify | htmlUnescape -}}</managingEditor>
      {{- end -}}
    {{- end -}}
    {{- with site.Author.name -}}
      {{- $name := . -}}
      {{- with site.Author.email -}}
        <webMaster>{{- . -}} ({{- $name | plainify | htmlUnescape -}})</webMaster>
      {{- else -}}
        <webMaster>{{- $name | plainify | htmlUnescape -}}</webMaster>
      {{- end -}}
    {{- end -}}
    {{- with site.Copyright -}}<copyright>{{- . | htmlUnescape -}}</copyright>{{- end -}}
    {{- if not .Date.IsZero -}}<lastBuildDate>{{- .Date.Format $rfc822_date | htmlUnescape -}}</lastBuildDate>{{- end -}}
    {{- range $pages -}}
      {{- $title := .Title | plainify | html -}}{{/* plainify | htmlUnescape */}}
      {{- $authors_list := slice -}}
      {{- range .GetTerms "authors" -}}
        {{- with .Params -}}
          {{- $name := .Title -}}
          {{- with .email -}}
            {{- $authors_list = $authors_list | append (slice (printf "%s (%s)" . ($name | plainify | htmlUnescape))) -}}
          {{- else -}}
            {{- $authors_list = $authors_list | append (slice (printf "%s" . )) -}}
          {{- end -}}
        {{- end -}}
      {{- end -}}
      <item>
        <title>{{- .Title | safeHTML -}}</title>
        <link>{{- $protocol -}}{{- .Permalink -}}</link>
        <guid isPermaLink="true">{{- $protocol -}}{{- .Permalink -}}</guid>
        <pubDate>{{- .Lastmod.Format $rfc822_date | htmlUnescape -}}</pubDate>
        {{- with .Description }}
          <summary>
              {{ printf "<![CDATA[%s]]>" . | htmlUnescape }}
          </summary>
        {{ end -}}
        {{- with .Summary }}
          <content type="html" xml:lang="{{- site.LanguageCode | default site.Data.default_params.languagecode -}}">
          {{ printf "<![CDATA[%s]]>" . | htmlUnescape }}
          </content>
        {{ end }}
        {{ with $authors_list -}}<author>{{- delimit $authors_list "," -}}</author>{{- end -}}
        {{- if not .IsHome -}}
          {{- with .CurrentSection -}}<category domain="{{- .Permalink -}}">{{- .Title -}}</category>{{- end -}}
        {{- end -}}
        {{- if isset .Params "images" -}}
            {{- $image := .Resources.GetMatch (index .Params.Images 0) -}}
            {{- with $image -}}
              {{- $img := $image.Resize (printf "%dx" 800) -}}
              {{- with $img -}}
                <media:content url="{{- $protocol -}}{{- .Permalink -}}" type="{{- .MediaType -}}" expression="full" width="{{- .Width -}}" height="{{- .Height -}}" />
              {{- end -}}
            {{- end -}}
        {{- end -}}
      </item>
    {{- end -}}
  </channel>
</rss>